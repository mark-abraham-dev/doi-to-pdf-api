{
  "name": "doi-to-pdf-api",
  "version": "1.0.0",
  "description": "API that extracts full text content from academic papers using DOIs.",
  "main": "dist/lambda.js",
  "scripts": {
    "start": "ts-node src/lambda.ts",
    "dev": "cross-env NODE_ENV=development nodemon --exec ts-node src/lambda.ts",
    "build": "tsc",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "check-types": "tsc --noEmit",
    "serverless:offline": "serverless offline",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "remove:dev": "serverless remove --stage dev",
    "remove:prod": "serverless remove --stage prod",
    "logs:dev": "serverless logs -f api -t --stage dev",
    "logs:prod": "serverless logs -f api -t --stage prod"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "aws-serverless-express": "^3.4.0",
    "axios": "^1.8.4",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "node-cache": "^5.1.2",
    "pdf-parse": "^1.1.1",
    "pdf.js-extract": "^0.2.1",
    "serverless-http": "^3.2.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^18.19.22",
    "@types/pdf-parse": "^1.1.5",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "serverless": "^3.38.0",
    "serverless-esbuild": "^1.48.5",
    "serverless-offline": "^13.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
